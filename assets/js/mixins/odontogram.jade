//- Make a SVG odontogram.
mixin odontogram
  - var quadrants = [ 1, 2, 3, 4 ]
  - var pieces = [ 1, 2, 3, 4, 5, 6, 7, 8 ]
  - for quadrant in quadrants
    .quadrant
      - for piece in pieces
        - id = quadrant * 10 + piece
          .piece(id=id)
            table
              thead
                th(colspan=3)=id
              tbody
                tr: td(colspan=3 ng-bind='pieces[id].sectors[1]')
                tr
                  td(ng-bind='pieces[id].sectors[4]')
                  td(ng-bind='pieces[id].sectors[0]')
                  td(ng-bind='pieces[id].sectors[2]')
                tr: td(colspan=3 ng-bind='pieces[id].sectors[3]')
            include ../svg/odontogram.svg
